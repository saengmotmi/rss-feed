{
  "extends": "next/core-web-vitals",
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          ["builtin", "external"],
          ["internal", "parent", "sibling"]
        ],
        "pathGroups": [
          {
            "pattern": "./*.types",
            "group": "sibling"
          },
          {
            "pattern": "./*.styles",
            "group": "sibling"
          },
          {
            "pattern": "global-style/**",
            "group": "sibling",
            "position": "after"
          },
          {
            "pattern": "./*.constant",
            "group": "sibling"
          },
          {
            "pattern": "./*.text",
            "group": "sibling",
            "position": "after"
          },
          {
            "pattern": "./*.scss",
            "group": "sibling",
            "position": "after"
          },
          {
            "pattern": "./*.css",
            "group": "sibling",
            "position": "after"
          },
          {
            "pattern": "assets/**",
            "group": "sibling",
            "position": "after"
          }
        ],
        "newlines-between": "always"
      }
    ]
  }
}
